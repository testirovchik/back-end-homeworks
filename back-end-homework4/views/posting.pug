//- Bootstrap 5 CSS & JS CDN
link(
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
  rel="stylesheet"
)
script(
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
)

div(class="container mt-4")

    // Post details
    h1(class="mb-2") #{post.name}
    h4(class="text-muted mb-4") #{post.description}

    // Comment form
    form(action=`/post/comment/${post.id}` method="post" class="mb-4")
        div(class="mb-3")
            label(for="name" class="form-label") Write here:
            input(type="text" name="name" class="form-control" placeholder="Enter your comment")
        button(type="submit" class="btn btn-primary") Submit

    // Comment section
    p(class="fw-bold mb-2") Comment section
    if arr && arr.length
        each item in arr
            div(class="card p-2 mb-2 shadow-sm") #{item}
    else
        p(class="text-muted fst-italic") No comments yet.
