//- Bootstrap 5 CSS CDN
link(
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
  rel="stylesheet"
)

h1(class="text-center my-4") Welcome

script(
  src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.11.0/axios.min.js"
  integrity="sha512-h9644v03pHqrIHThkvXhB2PJ8zf5E9IyVnrSfZg8Yj8k4RsO4zldcQc4Bi9iVLUCCsqNY0b4WXVV4UB+wbWENA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
)

a(href="/addPost" class="btn btn-success mb-3") Add post

ul(class="list-unstyled")
    each user in allPosts
        li(class="mb-2")
            div(class="card p-2")
                div(class="fw-bold") Name: #{user.name}
                div(class="text-muted") Description: #{user.description}
                a(href=`/post/${user.id}` class="btn btn-primary btn-sm mt-2") view
